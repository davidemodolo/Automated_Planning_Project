(define (domain robot-navigation)
  (:requirements :strips :typing)
  (:types room direction)
  (:predicates 
    (robot-at ?r - room)
    (connected ?r1 - room ?r2 - room)
    (facing ?r - room ?d - direction)
    (carrying ?o - object)
    (object-at ?o - object ?r - room)
    (goal ?r - room)
  )

  (:action move
    :parameters (?from - room ?to - room ?d - direction)
    :precondition (and (robot-at ?from) (connected ?from ?to) (facing ?from ?d))
    :effect (and (not (robot-at ?from)) (robot-at ?to) (not (facing ?from ?d)) (facing ?to ?d))
  )

  (:action grab
    :parameters (?o - object ?r - room)
    :precondition (and (object-at ?o ?r) (robot-at ?r))
    :effect (and (not (object-at ?o ?r)) (carrying ?o))
  )

  (:action drop
    :parameters (?o - object ?r - room)
    :precondition (and (carrying ?o) (robot-at ?r))
    :effect (and (not (carrying ?o)) (object-at ?o ?r))
  )

  (:action finish
    :parameters (?r - room)
    :precondition (and (robot-at ?r) (goal ?r))
    :effect (and (not (robot-at ?r)) (goal-achieved))
  )
)
